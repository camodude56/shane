JAlc:
PRINT "Your job is to mix stuff and make potions, depending upon the value, you will get"
PRINT "Paid. Understand? I hope so."
JAMixer:
CLS
PRINT "You have 6 items you can throw into a bowl and mix, only two can be mixed"
PRINT "together at the same time. Each item cost something to aquire."
PRINT " They are as follows,"

PRINT "Item", "", "Number", "Cost"
PRINT "Slime ", "", "  1", " 5"
PRINT "Eye of Newt", "", "  2", " 7"
PRINT "Toe of Slig", "", "  3", " 9"
PRINT "Bit of Slug", "", "  4", " 8"
PRINT "Spittle of Bee", "  5", " 6"
PRINT "Powdered Dragon Scale", "  6", "28"
PRINT "Exit", "", "  7", "28"

 
    INPUT "Item 1"; itemO&
    INPUT "Item 2"; itemT&
 if itemO& = 1 THEN mixer& = 4
 if itemO& = 1 THEN GMake& = GMake& - 5
 if itemO& = 2 THEN mixer& = 8
 if itemO& = 2 THEN GMake& = GMake& - 7
 if itemO& = 3 THEN mixer& = -5
 if itemO& = 3 THEN GMake& = GMake& - 9
 if itemO& = 4 THEN mixer& = 10
 if itemO& = 4 THEN GMake& = GMake& - 8
 if itemO& = 5 THEN mixer& = 15
 if itemO& = 5 THEN GMake& = GMake& - 6
 if itemO& = 6 THEN mixer& = 17
 if itemO& = 6 THEN GMake& = GMake& - 28
 if itemO& = 7 THEN  goto Start2
 if itemO& > 7 THEN  goto JAMixer
 if itemT& = 1 THEN Mixer2& = 5
 if itemT& = 1 THEN GMake& = GMake& - 5
 if itemT& = 2 THEN Mixer2& = -1
 if itemT& = 2 THEN GMake& = GMake& - 7
 if itemT& = 3 THEN Mixer2& = 13
 if itemT& = 3 THEN GMake& = GMake& - 9
 if itemT& = 4 THEN Mixer2& = 8
 if itemT& = 4 THEN GMake& = GMake& - 8
 if itemT& = 5 THEN Mixer2& = -3
 if itemT& = 5 THEN GMake& = GMake& - 6
 if itemT& = 6 THEN Mixer2& = 17
 if itemT& = 6 THEN GMake& = GMake& - 28
 if itemT& = 7 THEN  goto Start2
 if itemT& > 7 THEN  goto JAMixer
 if mixer& + Mixer2& < 10 THEN GMake& = 5
 if mixer& + Mixer2& > 10 THEN GMake& = 4
 if mixer& + Mixer2& = 10 THEN GMake& = 7
 if mixer& + Mixer2& = 13 THEN GMake& = GMake& + 16
 if mixer& + Mixer2& <> 13 THEN GMake& = GMake& + -2
 if mixer& + Mixer2& <> 1 THEN GMake& = GMake& + -6
 if mixer& + Mixer2& = 7 THEN GMake& = GMake& + 8
 if mixer& + Mixer2& = 12 THEN GMake& = GMake& + 14
 if mixer& + Mixer2& >= 21 THEN GMake& = GMake& + 20
 if mixer& + Mixer2& <> 7 THEN GMake& = GMake& + -8
 if mixer& + Mixer2& = 14 THEN GMake& = GMake& + 14
PRINT "You made "; GMake&; " Gold."
Gold& = Gold& + GMake&
INPUT "Press enter (return)"; Dummy$
 goto JAMixer




Prize:
 if SpareItem$ <> "nodda"  goto Prize2
RANDOMIZE TIMER
ItemGiven& = INT(RND * 9) + 1
 if ItemGiven& = 1 THEN SpareItem$ = "Rare Item"
 if ItemGiven& = 2 THEN SpareItem$ = "Gold Nugget"
 if ItemGiven& = 3 THEN SpareItem$ = "Bag of Silver"
 if ItemGiven& = 4 THEN SpareItem$ = "Platinum Cup"
 if ItemGiven& = 5 THEN SpareItem$ = "Oak Box"
 if ItemGiven& = 6 THEN SpareItem$ = "Rare 'Herbs'"
 if ItemGiven& = 7 THEN SpareItem$ = "???"
 if ItemGiven& = 8 THEN SpareItem$ = "Broken Item"
 if ItemGiven& = 9 THEN SpareItem$ = "Tapistry"
PRINT "Searching among the dead body you find a "; SpareItem$
INPUT "Press enter (return)"; Dummy$
 goto Start2

Prize2:
 if SpareItem2$ <> "nothingness"  goto Prize3
RANDOMIZE TIMER
ItemGiven& = int(RND * 9) + 1
 if ItemGiven& = 1 THEN SpareItem2$ = "Rare Item"
 if ItemGiven& = 2 THEN SpareItem2$ = "Gold Nugget"
 if ItemGiven& = 3 THEN SpareItem2$ = "Bag of Silver"
 if ItemGiven& = 4 THEN SpareItem2$ = "Platinum Cup"
 if ItemGiven& = 5 THEN SpareItem2$ = "Oak Box"
 if ItemGiven& = 6 THEN SpareItem2$ = "Rare 'Herbs'"
 if ItemGiven& = 7 THEN SpareItem2$ = "???"
 if ItemGiven& = 8 THEN SpareItem2$ = "Broken Item"
 if ItemGiven& = 9 THEN SpareItem2$ = "Tapistry"
PRINT "Searching among the dead body you find a "; SpareItem2$
INPUT "Press enter (return)"; Dummy$
 goto Start2

Prize3:
 if SpareItem3$ <> "nothin'" THEN PRINT "You already have 3 items, sell one first"
 if SpareItem3$ <> "nothin'" THEN SLEEP 2
 if SpareItem3$ <> "nothin'"  goto Stats
RANDOMIZE TIMER
ItemGiven& = int(RND * 9) + 1
 if ItemGiven& = 1 THEN SpareItem3$ = "Rare Item"
 if ItemGiven& = 2 THEN SpareItem3$ = "Gold Nugget"
 if ItemGiven& = 3 THEN SpareItem3$ = "Bag of Silver"
 if ItemGiven& = 4 THEN SpareItem3$ = "Platinum Cup"
 if ItemGiven& = 5 THEN SpareItem3$ = "Oak Box"
 if ItemGiven& = 6 THEN SpareItem3$ = "Rare 'Herbs'"
 if ItemGiven& = 7 THEN SpareItem3$ = "???"
 if ItemGiven& = 8 THEN SpareItem3$ = "Broken Item"
 if ItemGiven& = 9 THEN SpareItem3$ = "Tapistry"
PRINT "Searching among the dead body you find a "; SpareItem3$
INPUT "Press enter (return)"; Dummy$
 goto Start2
}
