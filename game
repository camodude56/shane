 if AWSGold& < 0 THEN AWSGold& = 0
 if AWSExe& < 0 THEN AWSExe& = 0
PRINT "You have defeated the skeleton, you earn "; AWSGold&; "gold and "; AWSExe&; "Experience"
Gold& = Gold& + AWSGold&
Exe& = Exe& + AWSExe&
 if Level& > 6 THEN Score& = Score& - 1
Score& = Score& + 1
