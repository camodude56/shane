dice:
PRINT "This game is high low, you bet money on a dice roll, the total is added."
PRINT "Above 6 is high and 6 and below are low. You have "; Gold&; " Gold."
PRINT "The last roll was"; X% + Y% + Z%
INPUT "Do you want low or high?"; Choose$
 if Choose$ = "High" THEN Choose% = 1
 if Choose$ = "high" THEN Choose% = 1
 if Choose$ = "HIGH" THEN Choose% = 1
 if Choose$ = "Low" THEN Choose% = 2
 if Choose$ = "low" THEN Choose% = 2
 if Choose$ = "LOW" THEN Choose% = 2
 if Choose$ = "Leave" THEN goto Start2
 if Choose$ = "leave" THEN goto Start2
 if Choose$ = "LEAVE" THEN goto Start2 else INPUT "How much gold do you bet"; GoldBet&
 if Gold& - GoldBet& < 0 THEN  goto dice

CLS
RANDOMIZE TIMER
  X% = INT(RND * 6) + 1
  Y% = INT(RND * 6) + 1
 if X% + Y% >= 6 THEN Win% = 1
 if X% + Y% < 6 THEN Win% = 2
 if Win% = Choose% THEN  goto DiceWin
 if Win% <> Choose% THEN  goto DiceLose
DiceWin:
Gold& = Gold& + (GoldBet& * 2)
PRINT "You win"
 goto dice
DiceLose:
Gold& = Gold& - GoldBet&
PRINT "You lose"
 goto dice



Damage:

  if WeapStr& = 0 THEN  goto Fist
  if WeapStr& = 2 THEN  goto Dagger
  if WeapStr& = 4 THEN  goto Spear
  if WeapStr& = 6 THEN  goto Club
