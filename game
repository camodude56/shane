Save:
    CLS
    PRINT "Saving game please wait."
    SLEEP 3
    OPEN Name$ FOR OUTPUT AS #1
        WRITE #1, Str&, Dex&, Con&, THealth&, Health&, Weap&, ExpGoal&, Exe&, WeapStr&, ArmStr&, RRingStr&, LRingStr&, Level&, Gold&, Score&, WepHave$, ArmHave$, LHave$, RHave$, DidCheat$, LRing&, RRing&
        INPUT "Press enter (return)"; Dummy$
    CLOSE #1
    'Print the file to the screen.
 goto Start2

Load:
    PRINT "Do you want to load a file (1)Yes (2)No"
    INPUT Load%
     if Load% = 1  goto TypeName
     if Load% = 2  goto Start2
TypeName:
    INPUT "Type the name of the file you wish to load (The name of your charater) "; LName$
    PRINT "Is "; LName$; " correct (1)Yes (2)No."
    INPUT Dummy&
     if Dummy& = 1 THEN  goto Loader2
     if Dummy& = 2 THEN  goto TypeName
Loader:
    PRINT "Loading "; Name$; " please wait"
    SLEEP 2
    OPEN Name$ FOR INPUT AS #1
    CLS
    PRINT "Entries in file:": PRINT
    INPUT #1, Str&, Dex&, Con&, THealth&, Health&, Weap&, ExpGoal&, Exe&, WeapStr&, ArmStr&, RRingStr&, LRingStr&, Level&, Gold&, Score&, WepHave$, ArmHave$, LHave$, RHave$, DidCheat$, LRing&, RRing&
    INPUT "Hit any key to continue"; Dummy
    CLOSE #1
 goto Start2
Loader2:
    PRINT "Loading "; LName$; " please wait"
    Name$ = LName$
    SLEEP 2
    OPEN LName$ FOR INPUT AS #1
    CLS
    PRINT "Entries in file:": PRINT
    INPUT #1, Str&, Dex&, Con&, THealth&, Health&, Weap&, ExpGoal&, Exe&, WeapStr&, ArmStr&, RRingStr&, LRingStr&, Level&, Gold&, Score&, WepHave$, ArmHave$, LHave$, RHave$, DidCheat$, LRing&, RRing&
    INPUT "Hit any key to continue"; Dummy
    CLOSE #1
 goto Start2


