 if Health& > THealth& THEN Health& = Health& - 1
 if Health& > THealth& THEN  goto HealthCheck  else  goto Inn

StatCheat:
DidCheat$ = "Yes"
INPUT "Name"; Name$
CLS
PRINT "You found the cheat code..."
PRINT "They cannot be below 6 or above 40 and cannot equal above 100."
INPUT "Strength"; Str&
 if Str& = 99 THEN  goto GameOver1
 if Str& > 40 THEN PRINT "Too strong"
 if Str& > 40 THEN  goto StatCheat
 if Str& < 6 THEN PRINT "Too weak"
 if Str& < 6 THEN  goto StatCheat
INPUT "Dexterity"; Dex&
 if Dex& > 40 THEN PRINT "Too fast"
 if Dex& > 40 THEN  goto StatCheat
 if Dex& < 6 THEN PRINT "Too slow"
 if Dex& < 6 THEN  goto StatCheat
INPUT "Constitution"; Con&
 if Con& > 40 THEN PRINT "Too stout"
 if Con& > 40 THEN  goto StatCheat
 if Con& < 6 THEN PRINT "Too sickly"
 if Con& < 6 THEN  goto StatCheat
INPUT "Gold * 10"; GoldS&
 if GoldS& > 40 THEN PRINT "Too rich"
 if GoldS& > 40 THEN  goto StatCheat
 if GoldS& < 6 THEN PRINT "Too poor"
 if GoldS& < 6 THEN  goto StatCheat
THealth& = Con& * 4
Health& = THealth&
Gold& = GoldS& * 100
Total& = Str& + Dex& + Con& + GoldS&
 if Total& > 100 THEN PRINT "The total must be 100 or lower"
 if Total& > 100 THEN  goto StatCheat
 if Total& < 100 THEN PRINT "You did not use all the points."
PRINT "Do you wish to reinput them?"
INPUT "(1) yes (2) no"; tlat&
 if tlat& = 1 THEN  goto StatCheat
 if tlat& = 2 THEN  goto Start2  else  goto StatCheat

