#include<iostream>
#include<cstring>
//the game
{
ExpGoal& = 500
SCREEN 9
start99:
Score& = 0
   THealth& = 45
  Health& = 45
Level& = 1
WeapStr& = 0
DidCheat$ = "No"
WepHave$ = "Fist"
ArmHave$ = "Skin (Your own)"
SpareItem$ = "nodda"
SpareItem2$ = "nothingness"
SpareItem3$ = "nothin'"
Start:
CLS
Namer:
INPUT "Name"; Name$
INPUT "Do you wish to load a game? (1) Yes (2) No"; Dummy%
 if Dummy% = 1  goto Load
 if Dummy% = 2  goto NameTest  else  goto Namer
NameTest:
 if Name$ = "Whovencroft" THEN Str& = 30
 if Name$ = "Whovencroft" THEN Dex& = 30
 if Name$ = "Whovencroft" THEN Con& = 30
 if Name$ = "Whovencroft" THEN Gold& = 15000
THealth& = Con& * 4
Health& = THealth&
 if Name$ = "Whovencroft" THEN  goto Start2
PRINT "Input your Strength (STR), Dexterity (DEX), and Constitution (CON)."
PRINT "They cannot be below 3 or above 20 and cannot equal above 50."
INPUT "Strength"; Str&
 if Str& = 99 THEN  goto GameOver1
 if Str& = 69 THEN  goto StatCheat
 if Str& >= 21 THEN PRINT "Too strong!"
 if Str& >= 21 THEN  goto Start
 if Str& <= 2 THEN PRINT "Too weak!"
 if Str& <= 2 THEN  goto Start
INPUT "Dexterity"; Dex&
 if Dex& >= 21 THEN PRINT "Too fast!"
 if Dex& >= 21 THEN  goto Start
 if Dex& <= 2 THEN PRINT "Too slow!"
 if Dex& <= 2 THEN  goto Start
INPUT "Constitution"; Con&
 if Con& >= 21 THEN PRINT "Too stout!"
 if Con& >= 21 THEN  goto Start
 if Con& <= 2 THEN PRINT "Too sickly!"
 if Con& <= 2 THEN  goto Start
INPUT "Gold * 10"; GoldS&
 if GoldS& >= 21 THEN PRINT "Too rich!"
 if GoldS& >= 21 THEN  goto Start
 if GoldS& <= 2 THEN PRINT "Too poor!"
 if GoldS& <= 2 THEN  goto Start
THealth& = Con& * 4
Health& = THealth&
Gold& = GoldS& * 10
Total& = Str& + Dex& + Con& + GoldS&
 if Total& > 50 THEN PRINT "The total must be 50 or lower."
 if Total& > 50 THEN  goto Start
 if Total& < 50 THEN PRINT "You did not use all the points."
PRINT "Do you wish to reinput them?"
INPUT "(1) Yes (2) No"; tlat&
 if tlat& = 1 THEN  goto Start
 if tlat& = 2 THEN  goto Start2  else  goto Start
Start2:
CLS
PRINT "Do you wish to  goto the (1)Arena (2)Armory (3)Training Hall (4)See your stats"
PRINT "the (5)Inn or the (6)Tavern (7)See whats new? (8)Get a job! or"
PRINT "(9) Save your game   (10) Load your game."
INPUT Choice1&
 if Choice1& = 1 THEN  goto Arena
 if Choice1& = 2 THEN  goto Armor
 if Choice1& = 3 THEN  goto Train
 if Choice1& = 4 THEN  goto Stats
 if Choice1& = 5 THEN  goto Inn
 if Choice1& = 6 THEN  goto Tavern
 if Choice1& = 7 THEN  goto WhatsNew
 if Choice1& = 8 THEN  goto Job
 if Choice1& = 9 THEN  goto Save
 if Choice1& = 10 THEN  goto Load
 if Choice1& = 99 THEN  goto GameOver1  else  goto Start2



Arena:
RatHealth& = 50
SkelHealth& = 78
FiendHealth& = 126
CaveHealth& = 160
PitHealth& = 213
TarHealth& = 364
DeathHealth& = 250
LichHealth& = 338
MancubHealth& = 424
DridHealth& = 500
WyHealth& = 600
ZarHealth& = 756
DragonHealth& = 780
WillHealth& = 653
TiHealth& = 1000
Defe& = Dex& + ArmStr&
TRing& = RRing& + LRing&


PRINT "Do you wish to fight a (1)Weak (2)Medium (3)Strong (4)Very Strong"
INPUT "(5)Brutal enemy or (6)leave "; AreCho&
 if AreCho& = 1 THEN  goto AW
 if AreCho& = 2 THEN  goto am
 if AreCho& = 3 THEN  goto ASt
 if AreCho& = 4 THEN  goto AVS
 if AreCho& = 5 THEN  goto AB
 if AreCho& = 6 THEN  goto Start2  else  goto Arena
 if AreCho& = 0 THEN  goto Start2
AW:
PRINT "A Giant Rat has 50 Hit Points, Skeletons have 78, Fiends 126."
INPUT "Do you wish to fight a (1)Giant Rat (2)Skeleton or a (3)Fiend"; AWCho&
 if AWCho& = 1 THEN  goto AWGRat
 if AWCho& = 2 THEN  goto AWSkel
 if AWCho& = 3 THEN  goto AWFiend
 if AWCho& = 0 THEN  goto Start2


AWGRat:
X& = 1
 if Health& <= 0  goto gameover
 if RatHealth& <= 0  goto AWGRWin
PRINT "You have "; Health&; " left, The rat has "; RatHealth&; " left"
INPUT "do you wish to (1)Attack or (2)Run"; AWGRFC&
CLS
 if AWGRFC& = 1 THEN  goto AWGRatt
 if AWGRFC& = 2 THEN  goto Arena
 if AWGRFC& = 2 THEN  goto AWGRRe  else  goto AWGRat

AWGRatt:
RANDOMIZE TIMER
RatDef& = INT(RND * 12) + 8
 if RatDef& - (Dex& + TRing&) <= 0  goto AWGRHit
 if RatDef& - (Dex& + TRing&) > 0  goto AWGRMiss
AWGRHit:
 goto Damage
AWGRHib:
EDam& = (Str& - 3) + WeapDam&
RatHealth& = RatHealth& - EDam&
PRINT "You hit the Giant rat for "; EDam&; " Points of Damage!"
 goto AWGRRe
AWGRMiss:
PRINT "You missed the giant rat!"
 goto AWGRRe
AWGRRe:
RANDOMIZE TIMER
 AWGRPo& = INT(RND * 25) + 16
 if AWGRPo& >= Defe& THEN  goto AWGRRHit  else  goto AWGRRMiss
AWGRRHit:
RANDOMIZE TIMER
RatDame& = INT(RND * 4) + 2
PlayHp = PlayHp - RatDame&
PRINT "You were hit for "; RatDame&; " Points of Damage!"
Health& = Health& - RatDame&
 goto AWGRat
AWGRRMiss:
PRINT "The giant rat Misses you!"
 goto AWGRat:
AWGRWin:
RANDOMIZE TIMER
AWGRGold& = INT(RND * 15) + 10 - (Level& * 3)
AWGRExe& = INT(RND * 50) + 25 - (Level& * 6)
 if AWGRGold& < 0 THEN AWGRGold& = 0
 if AWGRExe& < 0 THEN AWGRExe& = 0
PRINT "You have defeated the giant rat, you earn "; AWGRGold&; "gold and "; AWGRExe&; "Experience"
Gold& = Gold& + AWGRGold&
Exe& = Exe& + AWGRExe&
 if Level& > 4 THEN Score& = Score& - 1
Score& = Score& + 1
INPUT "Press enter to continue"; Dummy$
RANDOMIZE TIMER
Suprise& = INT(RND * 40) + 1
 if Suprise& = 15  goto Prize
 goto Stats





AWSkel:


X& = 2
 if Health& <= 0  goto gameover
 if SkelHealth& <= 0  goto AWSWin
PRINT "You have "; Health&; " left, The skeleton has "; SkelHealth&; " left"
INPUT "do you wish to (1)Attack or (2)Run"; AWSFC&
CLS
 if AWSFC& = 1 THEN  goto AWSAtt
 if AWSFC& = 2 THEN  goto Arena  else  goto AWSkel
 if AWSFC& = 0 THEN  goto Start2

AWSAtt:
 goto Damage
